{
  "name": "travel-planning-graphql-api",
  "version": "1.0.0",
  "description": "A scalable and maintainable GraphQL API for travel planning applications",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:4001": "PORT=4001 node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:4001": "PORT=4001 nodemon --exec ts-node src/server.ts",
    "build": "tsc && npm run test:coverage",
    "build:watch": "tsc --watch",
    "build:no-test": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "graphql",
    "travel",
    "weather",
    "api",
    "typescript",
    "apollo"
  ],
  "author": "Travel Planning API Team",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/schema": "^10.0.25",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
